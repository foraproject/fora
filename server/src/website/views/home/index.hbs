<div class="single-section-page single-column">

    {{> cover coverInfo}}

    <div class="main-pane">
        <div class="nav">
            <ul>
                <li class="selected">
                    Posts
                </li>
                <li>
                    <a href="/forums">Forums</a>
                </li>            
            </ul>
        </div>
        <div class="content-area">
            {{#if editorsPicks}}
                <ul class="cards standard">
                    {{#each editorsPicks}}
                    {{{html}}}
                    {{/each}}
                </ul>
            {{/if}}

            {{#if featured}}
                <ul class="cards standard">
                    {{#each featured}}
                    {{{html}}}
                    {{/each}}
                </ul>
            {{/if}}
        </div>
    </div>  
    
</div>
