<li class="{{view}} alt" data-url="/{{stub}}">
    <div class="item-wrap">
        <div class="image" style="background-image:url({{image}})"></div>
        <div class="content-wrap">
            <h2><a href="/{{stub}}">{{name}}</a></h2>
            <div class="content">        
                {{#if snapshot.records}}                
                <ul class="desc-text">
                {{#each snapshot.records}}                
                    <li>
                        <span class="text">
                            <a href="/{{../stub}}/{{stub}}">{{title}}</a><br />
                            <span class="light-text">{{createdBy.name}}</span>
                        </span>
                    </li>
                {{/each}}
                </ul>
                {{/if}}
            </div>            
            <div class="overlay"></div>
        </div>
    </div>
</li>

